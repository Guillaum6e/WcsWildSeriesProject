{% extends 'base.html.twig' %}

{% block title %}Categories list{% endblock %}

{% block body %}
    <h1>Toutes les catégories existantes sur notre site :</h1>

    {% for category in categories %}
        <div>
            <a href="{{ path("category_show", {name: category.name}) }}">{{ category.name }}</a>
        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}
    <a href="{{ path("category_new") }}">Ajouter une nouvelle catégorie</a>
{% endblock %}